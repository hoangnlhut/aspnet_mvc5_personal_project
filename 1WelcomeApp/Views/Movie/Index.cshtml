<!--#region for call Restfull API  -->
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main aria-labelledby="title">
    <div>
        <a href="@Url.Action("Add", "Movie")" class="btn btn-primary">New Movie</a>
    </div>
    <br />

    <table id="movies" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Movie</th>
                    <th>Genre</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
     </table>
</main>



@section scripts
{
    <script>
        $(document).ready(function () {

            //use datatable plugin
            var table = $("#movies").DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, movie) {
                            return "<a href='/movie/edit/" + movie.id + "'>" + movie.name + "</a>";
                        }
                    },
                    {
                        data: "genre.name"
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn-link js-delete' data-movie-id=" + data + ">Delete</button>";
                        }
                    }
                ]
            });

            $("#movies").on("click", ".js-delete", function () {
                var button = $(this);


                bootbox.confirm("Are you sure to delete this movie?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/movies/" + button.attr("data-movie-id"),
                            method: "DELETE",
                            success: function () {
                                console.log("Delete successfully");
                                table.row(button.parents("tr")).remove().draw();
                            }
                        });
                    }
                });
            });
        });
       
    </script>
}
<!--#endregion -->
