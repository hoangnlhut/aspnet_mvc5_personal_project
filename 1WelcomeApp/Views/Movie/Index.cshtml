@model IEnumerable<_1WelcomeApp.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main aria-labelledby="title">
    <div>
        <a href="@Url.Action("AddOrUpdate", "Movie", new { id = 0 })" class="btn btn-primary">New Movie</a>
    </div>
    <br />

    @if (Model.ToList().Count <= 0)
    {
        <h2 id="title">There is no any customers</h2>
    }
    else
    {
        <table class="table	table­‐bordered table­‐hover">
            <thead>
                <tr>
                    <th>Movie</th>
                    <th>Genre</th>
                </tr>
            </thead>

            @foreach (var movie in Model)
            {
                <tr>
                    <td> @Html.ActionLink(movie.Name, "AddOrUpdate", "Movie", new { id = movie.Id }, null)</td>
                    <td>@movie.Genre.Name</td>
                </tr>
            }
        </table>
    }
</main>


